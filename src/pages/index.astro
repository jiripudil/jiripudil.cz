import PageSeo from '../components/PageSeo.astro';
import Layout from '../layouts/Layout.astro';
import profilePhoto from '../images/me.jpg';
---
<Layout>
	<PageSeo
		slot="head"
		title="Home"
	/>

	<div class="body">
		<Container>
			<h1>
				<Image src={profilePhoto} alt="JiÅ™Ã­ Pudil's profile photo" class="portrait" />
				<span>Hi, I&nbsp;am</span>
				<strong>JiÅ™Ã­ Pudil</strong>
			</h1>

			<div class="claim">
				a&nbsp;software engineer from ðŸ‡¨ðŸ‡¿ Brno
			</div>

			<div class="contacts">
				<ul>
					<li>
						<a href="https://linkedin.com/in/jiripudil" title="LinkedIn" aria-label="LinkedIn">
							<Icon name="fa6-brands:linkedin" />
						</a>
					</li>
					<li>
						<a href="https://github.com/jiripudil" title="GitHub" aria-label="GitHub">
							<Icon name="fa6-brands:github" />
						</a>
					</li>
					<li>
						<a href="https://bsky.app/profile/jiripudil.cz" title="Bluesky" aria-label="Bluesky">
